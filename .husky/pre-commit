#!/usr/bin/env bash
. "$(dirname "$0")/_/husky.sh"

echo "[pre-commit] Running backend consistency checks"
cd my-backend || exit 1
npm run -s check:routes:naming || { echo "Route naming failed"; exit 1; }
npm run -s registry:drift-check || { echo "Drift check failed"; exit 1; }
echo "[pre-commit] Checks passed"
