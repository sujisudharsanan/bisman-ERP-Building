{
  "name": "my-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:both": "concurrently \"npm run dev\" \"echo 'Mattermost is running on Railway at https://mattermost-production-84fd.up.railway.app'\" --names \"frontend,mattermost\" --prefix-colors \"cyan,magenta\"",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "ts-node --compiler-options '{\"module\":\"commonjs\"}' prisma/seed.ts",
    "prepare": "if [ \"$CI\" = \"true\" ]; then echo 'skip husky on CI'; else husky; fi",
    "prebuild": "node ../my-backend/scripts/export-page-registry.js 2>/dev/null || echo 'Registry export skipped'; if [ \"$CI\" = \"true\" ] || [ \"$VERCEL\" = \"1\" ] || [ \"$RAILWAY\" = \"1\" ]; then echo 'skip lint/type-check in CI/Vercel/Railway'; else if [ -f .eslintrc.json ] || [ -f .eslintrc.js ] || [ -f .eslintrc.cjs ] || [ -f .eslintrc.yml ] || [ -f .eslintrc.yaml ] || grep -q \"\\\"eslintConfig\\\"\" package.json 2>/dev/null; then eslint . --ext .js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern; else echo 'skip eslint (no config)'; fi; tsc --noEmit; fi",
    "vercel-build": "CI=true VERCEL=1 npx next build",
    "verify:clean": "grep -R 'loader-demo' -n || echo 'No loader-demo references'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:strict": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0 --report-unused-disable-directives",
    "type-check": "tsc --noEmit",
    "syntax-guard": "bash scripts/syntax-guard.sh",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest --run",
    "e2e": "echo 'add playwright or cypress e2e here'",
    "debug:record": "node tools/debug-recorder/run.js --all",
    "debug:analyze": "node tools/debug-analyzer/analyze.js --all",
    "debug:report": "npm run debug:record && npm run debug:analyze",
    "debug:apply": "node tools/debug-analyzer/apply.js",
    "layout:audit": "node scripts/layoutAudit.js",
    "layout:audit:page": "node scripts/layoutAudit.js --page",
    "layout:audit:visual": "node scripts/layoutAudit.js --visual",
    "layout:visual": "node scripts/generateVisualSummary.js",
    "layout:visual:role": "node scripts/generateVisualSummary.js --role",
    "layout:visual:format": "node scripts/generateVisualSummary.js --format",
    "layout:version": "node scripts/updateLayoutVersion.js",
    "registry:export": "node ../my-backend/scripts/export-page-registry.js",
    "registry:check": "cd ../my-backend && node check-modules-consistency.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@hookform/resolvers": "^5.2.2",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid-pro": "^8.11.3",
    "@prisma/client": "^5.21.1",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@tanstack/react-query": "^5.90.2",
    "@types/react-grid-layout": "^1.3.5",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.6.2",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "jose": "^5.9.6",
    "lucide-react": "^0.544.0",
    "next": "latest",
    "next-auth": "^4.24.7",
    "next-i18next": "^15.4.2",
    "next-safe": "^3.5.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.5.2",
    "react-hook-form": "^7.63.0",
    "react-icons": "^4.12.0",
    "recharts": "^2.15.4",
    "rrule": "^2.8.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "latest",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "autoprefixer": "10.4.14",
    "concurrently": "^9.2.1",
    "eslint": "8.57.1",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.4.2",
    "prisma": "^5.21.1",
    "tailwindcss": "3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "latest",
    "vitest": "^4.0.3"
  },
  "devDependenciesAddons": {
    "acorn": "^8.8.2"
  },
  "devDependenciesWalk": {
    "acorn-walk": "^8.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
