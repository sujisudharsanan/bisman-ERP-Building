{
  "name": "bisman-erp",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "audit:all": "bash start-audit.sh",
    "audit:performance": "echo 'See: audit-reports/latest/performance/'",
    "audit:security": "echo 'See: audit-reports/latest/security/'",
    "audit:view": "cat audit-reports/LATEST_AUDIT_SUMMARY.md",
    "docs:fill": "node -e \"console.log('docs: python toolchain removed; no-op')\"",
    "docs:build": "node -e \"console.log('docs build disabled: python toolchain removed')\"",
    "docs:package": "node -e \"console.log('docs package disabled: python toolchain removed')\"",
    "docs:serve": "cd system-docs && mkdocs serve -f ../mkdocs.yml",
    "docs:lint": "npx markdownlint 'system-docs/**/*.md' --config .markdownlint.json",
    "docs:pdf": "node -e \"console.log('docs pdf disabled: python toolchain removed')\"",
    "docs:show-pdf": "open system-docs/artifacts/latest.pdf || true",
    "dev:backend": "ts-node -r tsconfig-paths/register apps/api/src/main.ts",
    "dev:frontend": "cd my-frontend && next dev -p 3001",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:worker": "npx ts-node --transpile-only apps/worker/src/worker.ts",
    "dev:my-backend": "cd my-backend && npm run dev",
    "dev:frontend:3000": "cd my-frontend && npm run dev -- -p 3000",
    "dev:both": "concurrently -n backend,frontend -c green,cyan \"npm:dev:my-backend\" \"npm:dev:frontend:3000\"",
    "dev:all": "npx concurrently \"npm:dev:api\" \"npm:dev:worker\"",
    "start:dev:watch": "nodemon --watch apps/api --watch libs --exec \"ts-node -r tsconfig-paths/register apps/api/src/main.ts\"",
    "start:dry-run": "node -r ts-node/register apps/api/src/main.ts --dry-run",
    "build:backend": "tsc -p tsconfig.build.json",
    "start:backend": "node -r module-alias/register dist/apps/api/src/main.js",
    "build:frontend": "cd my-frontend && next build",
    "start:frontend": "cd my-frontend && next start -p 3001",
    "start": "concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "start:prod": "bash scripts/start-prod.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js || true",
    "pm2:restart": "pm2 restart ecosystem.config.js --env production",
    "pm2:delete": "pm2 delete ecosystem.config.js || true",
    "deploy:prod": "bash scripts/start-prod.sh",
    "start:api": "npm run start:backend",
    "test:api": "jest --config jest.api.config.cjs --runInBand",
    "css:prefix": "postcss src/**/*.css --replace",
    "css:watch": "postcss src/**/*.css --replace --watch"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^11.1.7",
    "@nestjs/testing": "^11.1.7",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.0.0",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "express": "^4.21.2",
    "glob": "^11.0.3",
    "jest": "^29.6.1",
    "markdownlint-cli": "^0.36.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.44.1",
    "pm2": "^6.0.13",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.4.0",
    "puppeteer-core": "^24.23.0",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "_moduleAliases": {
    "@libs": "dist/libs/shared"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.7",
    "@nestjs/core": "^11.1.7",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@prisma/client": "^6.18.0",
    "@sentry/node": "^10.15.0",
    "@sentry/tracing": "^7.120.4",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.9",
    "cookie-parser": "^1.4.6",
    "dotenv": "^17.2.3",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "next": "latest",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "prisma": "^6.18.0",
    "prom-client": "^15.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13"
  }
}
