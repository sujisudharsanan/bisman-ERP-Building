{
  "name": "bisman-erp-server",
  "version": "1.0.0",
  "description": "Hybrid multi-tenant ERP backend with Express, Prisma, and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "npm run prisma:generate:enterprise && npm run prisma:generate:client",
    "prisma:generate:enterprise": "prisma generate --schema=prisma/schema.enterprise.prisma",
    "prisma:generate:client": "prisma generate --schema=prisma/schema.client.prisma",
    "prisma:migrate:enterprise": "prisma migrate dev --schema=prisma/schema.enterprise.prisma",
    "prisma:migrate:client": "prisma migrate dev --schema=prisma/schema.client.prisma",
    "prisma:deploy:enterprise": "prisma migrate deploy --schema=prisma/schema.enterprise.prisma",
    "prisma:studio:enterprise": "prisma studio --schema=prisma/schema.enterprise.prisma",
    "prisma:studio:client": "prisma studio --schema=prisma/schema.client.prisma",
    "provision-client": "ts-node scripts/provisionClientDb.ts",
    "migrate-all-clients": "ts-node scripts/migrateAllClients.ts",
    "seed:enterprise": "ts-node scripts/seedEnterprise.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "erp",
    "multi-tenant",
    "prisma",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "BISMAN ERP Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.1.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
